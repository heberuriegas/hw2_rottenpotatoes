-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      - if @sort_title == 1
        %th{class: 'background_yellow'}
          =link_to 'Movie Title', './movies?sort_title=1', id: 'title_header'
      - else
        %th
          =link_to 'Movie Title', './movies?sort_title=1', id: 'title_header'
      %th Rating
      - if @sort_release_date == 1
        %th{class: 'background_yellow'}
          =link_to 'Release Date', './movies?sort_release_date=1', id: 'release_date_header'
      - else
        %th
          =link_to 'Release Date', './movies?sort_release_date=1', id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
